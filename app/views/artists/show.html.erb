<div class="ui card">
  <div class="image">
    <img src=Faker::Avatar.image />
  </div>
  <div class="content">
    <p class="header">
      <%= @artist.name %> 
    </p>
    <div class="meta">
      <span class="date"><%= @artist.genre %></span>
    </div>
    <div class="description">
      <%= @artist.bio %>
    </div>
    
  </div>
  <div class="extra content">
    <%= link_to 'Edit', edit_artist_path(@artist) %> |
    <%= link_to 'Back', artists_path %>
  </div>
</div>