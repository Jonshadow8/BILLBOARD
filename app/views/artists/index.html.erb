<h1 class="ui header">Artists</h1>
<%= link_to 'New Artist', new_artist_path_url %>
<div class="ui divider"></div>
<div class="ui large top fixed menu transition hidden">
  <div class="ui container">
    <a class="active item">Home</a>
    <a class="item">Top_100_Artists</a>
    <a class="item">Hot_100_Songs</a>
    <a class="item">About</a>
    <div class="right menu">
      <div class="item">
        
      </div>
      <div class="item">
        
      </div>
    </div>
  </div>
</div>

<div class="ui grid">
  <% @artists.each do |artist| %>
    <div class="sixteen wide mobile eight wide tablet four wide computer column">
      <div class="ui card">
        <div class="image">
          <img src="https://robohash.org/<%= artist.avatar %>?set=set4" />
        </div>
        <div class="content">
          <%= link_to "#{artist.name}", artist, class: "header" %>
        </div>
        <div class="extra content">
          <div class="ui two buttons">
            <div class="ui basic green button">
              <%= link_to 'Edit', edit_artist_path_url %>
            </div>
            <div class="ui basic red button">
              <%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
